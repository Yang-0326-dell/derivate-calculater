int file(string txt, bool state) {
	time_t now = time(0);

	char* dt = ctime(&now);

	//cout << "版ユ堕达" << dt << endl;

	//	tm* gmtm = gmtime(&now);
	//dt = asctime(gmtm);
	//cout << "UTC ユ堕达" << dt << endl;

	fstream x("results.txt", ios::app);
	x << dt;
	x << "\r\n";
	x << txt;
	x << "\r\n\r\n";
	x.close();
	return 0;
}


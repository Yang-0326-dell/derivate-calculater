	}
}

bool clean() {
	cout << "Need to clean the screen? Answer y or n:";
	string ans = "";
	cin >> ans;

	if (ans == "y") {
		system("cls");
		return 1;
	}
	else if (ans == "n") {
		return 0;
	}
	else {

	}
}

int checkup(int n, vector<long> a) {
	int sub = 0;
	int n_max = sizeof(a) / sizeof(a[0]) - 1;
	cout << n << endl;
	while (1) {
		if (sub <= n)
			cout << "a_" << sub << "=" << a[sub] << endl;
		if (sub == n) {
			return 0;
			break;
		}
		else if (sub > n) {
			return 1;
			break;
		}
		sub++;

	}

}

int checkup2(int n, vector<long long> a) {
	int sub = 0;
	int n_max = sizeof(a) / sizeof(a[0]) - 1;
	cout << n << endl;

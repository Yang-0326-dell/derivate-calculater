		if (sub <= n)
			cout << "a_" << sub << "=" << a[sub] << endl;
		if (sub == n) {
			return 0;
			break;
		}
		else if (sub > n) {
			return 1;
			break;
		}
		sub++;

	}

}

bool choose(string what) {
begin:
	cout << what;
	cout << "Enter y(yes) or n(no): ";
	string result;
	while (cin >> result) {
		try {
			if (result != "n" && result != "y")
				throw runtime_error("invalid answer!");
			else
				break;
		}
		catch (runtime_error err) {
			cout << err.what()
				<< "\ntry again!\n"
				<< what << "(enter y or n)";
		}

	}
	if (result == "n")
		return 1;
	if (result == "y")
		return 0;
}

int continue1() {
begin:
	//cout << "sure to continue?" << endl;
	int ans = choose("sure to continue?");
	if (ans == 0)
		;
	else
		goto begin;
	return 0;
}


